# Environment variables for AI-BoD (AI Board of Directors)

# ============================================
# REQUIRED: Database Configuration (Supabase)
# ============================================
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key

# ============================================
# CRITICAL: Security Settings
# ============================================
# MUST be 'false' in production to enforce authentication
REACT_APP_BYPASS_AUTH=false

# Environment indicator (development, staging, production)
REACT_APP_ENV=production

# Debug mode - MUST be false in production
REACT_APP_DEBUG_MODE=false

# ============================================
# OPTIONAL: AI Service API Keys
# ============================================
# Note: Users configure their own API keys via Settings UI
# These are fallback defaults for demo/development only
REACT_APP_OPENAI_API_KEY=
REACT_APP_ANTHROPIC_API_KEY=
REACT_APP_DEEPGRAM_API_KEY=

# Google Gemini API (for voice conversations with Gemini Live API)
# Get your API key from: https://aistudio.google.com/apikey
REACT_APP_GEMINI_API_KEY=

# ============================================
# OPTIONAL: Monitoring & Error Tracking
# ============================================
REACT_APP_SENTRY_DSN=

# ============================================
# OPTIONAL: Feature Flags
# ============================================
REACT_APP_ENABLE_DOCUMENT_UPLOAD=true
REACT_APP_ENABLE_VOICE_INPUT=true
REACT_APP_MAX_DOCUMENT_SIZE=10485760

# ============================================
# OPTIONAL: Testing & Development
# ============================================
# Use mock AI responses (for testing without API keys)
REACT_APP_USE_MOCK_AI=false