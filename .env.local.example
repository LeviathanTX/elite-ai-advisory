# Elite AI Advisory - Environment Configuration
# Copy this file to .env.local and configure your settings

# Application Environment
REACT_APP_ENV=development

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3001
REACT_APP_USE_MOCK_AI=true

# Debug and Analytics
REACT_APP_DEBUG_MODE=true
REACT_APP_ENABLE_ANALYTICS=false

# Security Settings
REACT_APP_ENABLE_CLIENT_AI=false

# Feature Flags
REACT_APP_ENABLE_DOCUMENT_UPLOAD=true
REACT_APP_ENABLE_VOICE_INPUT=false
REACT_APP_MAX_DOCUMENT_SIZE=10485760

# Development Settings
REACT_APP_LOG_LEVEL=debug
REACT_APP_MOCK_DELAY_MS=1000

# Production Settings (override in production)
# REACT_APP_ENV=production
# REACT_APP_API_BASE_URL=https://your-api.com
# REACT_APP_USE_MOCK_AI=false
# REACT_APP_DEBUG_MODE=false
# REACT_APP_ENABLE_ANALYTICS=true